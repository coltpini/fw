tippet-border = #69f - #111
tippet-light = tippet-border + #222
tippet-background = #fff
tippet-title-color = #eee
tippet-text = #333

background-gradient(color1, color2)
	background-color color2
	background-image -webkit-gradient(linear, left top, left bottom, from(color1), to(color2))
	background-image -webkit-linear-gradient(top, color1, color2 90%)
	background-image -moz-linear-gradient(top, color1, color2 90%)
	background-image -ms-linear-gradient(top, color1, color2 90%)
	background-image -o-linear-gradient(top, color1, color2 90%)
	background-image linear-gradient(top, color1, color2 90%)

border-radius(rad)
	-webkit-border-radius rad
	border-radius rad
	-moz-background-clip padding 
	-webkit-background-clip padding-box 
	background-clip padding-box

border-top-radius(rad)
	-webkit-border-top-right-radius rad
	border-top-right-radius rad
	-webkit-border-top-left-radius rad
	border-top-left-radius rad
	-moz-background-clip padding 
	-webkit-background-clip padding-box 
	background-clip padding-box

//.tippetElem 

.tippet 
	max-width 400px
	min-width 200px

.tippet.wide 
	max-width 700px
	min-width 500px

.tippet
	text-shadow none
	text-align left
	position absolute
	z-index 201
	margin 12px
	border 2px solid tippet-border
	background-color tippet-background
	font 12px/14px 'Helvetica Neue', helvetica, sans-serif
	border-radius 4px


	h3 
		padding 5px
		margin 0 0 2px 0
		font normal 10px/9px "Lucida Grande","Lucida Sans","Lucida Sans Regular","Lucida Sans Unicode",Verdana,Helvetica,Arial,sans-serif
		color tippet-title-color
		text-shadow 0px 1px 1px #fff - tippet-title-color
		background-gradient tippet-light, tippet-border		
		border-top-radius 2px	

	.tippetContent 
		padding 5px
		color tippet-text
		font 12px/16px "Lucida Grande", "Lucida Sans", "Lucida Sans Regular", "Trebuchet MS", Arial, sans-serif
		margin 0 4px

	.tippetArrow 
		position absolute
		border 10px solid transparent
		height 20px
		width 20px

.tippet 
	&.top 
		bottom 100%		
		left 70%
		.tippetArrow
			bottom -20px
			left 5px
			border-top-color tippet-border		

	&.right 
		left 100%
		top 70%
		.tippetArrow
			left -20px
			top 5px
			border-right-color tippet-border

	&.bottom 
		top 100%
		left 70%
		.tippetArrow
			top -20px
			left 5px
			border-bottom-color tippet-border

	&.left 	
		right 100%
		top 70%
		.tippetArrow
			right -20px
			top 5px
			border-left-color tippet-border

	//&.front

	&.middle
		&.right, &.left
			.tippetArrow
				margin auto	0			
				top 1px
				bottom 1px
		&.top, &.bottom
			
			.tippetArrow
				margin 0 auto
				left 1px
				right 1px
	&.before
		&.right, &.left
			.tippetArrow
				bottom 5px
				top auto
		&.top, &.bottom
			.tippetArrow
				right 5px
				left auto